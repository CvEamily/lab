.p20 {
  padding: 20rpx;
}
.container {
  padding: 0 20rpx;
}
.tmt-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.tmt-header .select-wrap {
  display: flex;
  align-items: center;
}
.tmt-header .select-wrap .arrow-left {
  width: 18rpx;
  height: 18rpx;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-left-width: 1rpx;
  border-bottom-width: 1rpx;
  border-left-style: solid;
  border-bottom-style: solid;
}
.tmt-header .select-wrap .time {
  font-size: 36rpx;
  margin: 0 20rpx;
}
.tmt-header .select-wrap .arrow-right {
  width: 18rpx;
  height: 18rpx;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-top-width: 1rpx;
  border-right-width: 1rpx;
  border-top-style: solid;
  border-right-style: solid;
}
.tmt-header .back {
  padding: 0 20rpx;
  font-size: 24rpx;
  height: 52rpx;
  color: #fff;
  line-height: 52rpx;
  background: rgba(255, 255, 255, 0.19);
  text-align: center;
  border-radius: 30rpx;
}
.cell {
  width: 14.28%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.cell .point {
  width: 6rpx;
  height: 6rpx;
  position: absolute;
  bottom: 3rpx;
  border-radius: 50%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.cell .dayText {
  width: 56rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  border-radius: 50%;
}
.cell .dayText.on {
  background: linear-gradient(180deg, #FF855E 0%, #ED6337 100%);
}
.tmt-content {
  padding-bottom: 20rpx;
}
.tmt-content .tmt-week-wrap {
  display: flex;
}
.tmt-content .tmt-week-wrap .week-item {
  font-size: 36rpx;
}
.tmt-content .tmt-day-wrap {
  display: flex;
  flex-wrap: wrap;
  transition: height .3s;
  overflow: hidden;
}
.tmt-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  margin-top: -36rpx;
}
.tmt-footer .arrow-down {
  width: 18rpx;
  height: 18rpx;
  -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
  border-left-width: 1rpx;
  border-bottom-width: 1rpx;
  border-left-style: solid;
  border-bottom-style: solid;
  transition: all .3s;
}
.tmt-footer .arrow-down.on {
  -webkit-transform: rotate(135deg);
          transform: rotate(135deg);
}

