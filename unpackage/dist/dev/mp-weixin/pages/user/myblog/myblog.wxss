.bg {
  width: 100%;
  height: 1210rpx;
  padding-top: 190rpx;
  background-image: url("https://tse2-mm.cn.bing.net/th/id/OIP-C.Yy5uxVxvFfrlHTt__7rm1QHaKD?pid=ImgDet&rs=1");
  background-size: 100% 100%;
}
.bg .compose {
  position: fixed;
  top: 980rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 95rpx;
  background-color: #3b968c;
  border-radius: 100rpx;
}
.bg uni-popup {
  border-radius: 50rpx;
}
.bg uni-popup textarea {
  padding: 30rpx;
  border-radius: 50rpx;
  background-color: white;
}
.bg uni-popup button {
  width: 180rpx;
  height: 80rpx;
  color: white;
  font-size: 25rpx;
  font-weight: 700;
  margin-top: 60rpx;
  background-color: #3b968c;
  border-radius: 100rpx;
}
.bg uni-popup button .icon {
  margin-right: 10rpx;
  font-weight: 400;
}
.bg .bigBox {
  background-color: #f6f6f6;
  border-radius: 30rpx 30rpx 0 0;
}
.bg .bigBox .User {
  position: absolute;
  top: 110rpx;
  left: 20rpx;
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  box-shadow: 3rpx 3rpx 2rpx 2rpx #e8e8e8;
  border-radius: 90rpx;
  border: 7rpx solid white;
}
.bg .bigBox .User image {
  height: 100%;
  width: 100%;
}
.bg .bigBox .sta {
  padding-top: 10rpx;
  padding-left: 30rpx;
  padding-bottom: 60rpx;
  background-color: white;
  border-radius: 30rpx 30rpx 0 0;
}
.bg .bigBox .sta .number {
  margin-left: 200rpx;
  margin-bottom: 100rpx;
}
.bg .bigBox .sta .number .content {
  float: left;
  margin-left: 10rpx;
  margin-right: 80rpx;
}
.bg .bigBox .sta .number .content .top {
  text-align: center;
  font-weight: 700;
}
.bg .bigBox .sta .number .content .bottom {
  color: #989898;
}
.bg .bigBox .sta text {
  font-size: 40rpx;
}
.bg .bigBox .myBlog .blog {
  width: 710rpx;
  height: 380rpx;
  padding-left: 40rpx;
  margin-top: 20rpx;
}
.bg .bigBox .myBlog .blog .left {
  float: left;
  width: 220rpx;
  height: 300rpx;
  padding-top: 40rpx;
  padding-bottom: 30rpx;
}
.bg .bigBox .myBlog .blog .left image {
  width: 100%;
  height: 100%;
}
.bg .bigBox .myBlog .blog .right {
  float: right;
  width: 450rpx;
  height: 300rpx;
  padding-top: 30rpx;
}
.bg .bigBox .myBlog .blog .right .headline {
  width: 100%;
  height: 40rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 35rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
}
.bg .bigBox .myBlog .blog .right .author .user {
  float: left;
  width: 50rpx;
  height: 50rpx;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  box-shadow: 0 0 2rpx 2rpx white;
  border-radius: 50rpx;
}
.bg .bigBox .myBlog .blog .right .author .user image {
  height: 100%;
  width: 100%;
}
.bg .bigBox .myBlog .blog .right .author text {
  padding-left: 20rpx;
}
.bg .bigBox .myBlog .blog .right .body {
  height: 160rpx;
  margin-top: 15rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
}
.bg .bigBox .myBlog .blog .right .icon .uniIcon {
  float: left;
  font-size: 25rpx;
  margin-right: 30rpx;
}

