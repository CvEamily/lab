.bg {
  background-color: #ffffff;
}
.bg .tit {
  display: flex;
  padding-top: 30rpx;
  padding-left: 300rpx;
  height: 50rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: 800;
}
.bg .tit .publish {
  width: 150rpx;
  height: 70rpx;
  color: white;
  text-align: center;
  line-height: 70rpx;
  border-radius: 50rpx;
  background-color: #056de8;
  font-weight: 500;
  margin-left: 200rpx;
  z-index: 2;
  font-size: 30rpx;
}
.bg .Title {
  width: 680rpx;
  height: 70rpx;
  margin: 35rpx;
  margin-bottom: 0;
  padding-top: 20rpx;
  font-size: 40rpx;
  font-weight: 500;
  border-bottom: 5rpx solid #c0c0c0;
}
.bg .title {
  color: lightgrey;
}
.bg .body {
  overflow-y: scroll;
  width: 680rpx;
  height: 69vh;
  padding: 35rpx;
  z-index: 1;
}
.bg .function {
  width: 707rpx;
  height: 60rpx;
  padding: 20rpx;
  margin-top: 0;
  border-top: 1rpx solid #d8d8d8;
  border-bottom: 1rpx solid #d8d8d8;
  z-index: 1;
}
.bg .function uni-icons {
  padding: 30rpx;
}
.bg .function .picture {
  width: 100%;
  height: 130rpx;
  text-align: center;
  line-height: 130rpx;
  background-color: white;
  border: 0;
}
.bg .fontBox {
  height: 250rpx;
  padding-top: 40rpx;
  padding-left: 40rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.bg .fontBox .item {
  float: left;
  width: 340rpx;
}
.bg .fontBox .item .uniIcon {
  width: 340rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  margin-bottom: 10rpx;
  background-color: #f9f9f9;
}
.bg .fontBox .item:nth-child(1) {
  font-weight: 600;
  font-size: 35rpx;
}
.bg .plusBox {
  height: 250rpx;
  padding-top: 40rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.bg .plusBox .item {
  float: left;
  width: 100rpx;
  margin-right: 40rpx;
}
.bg .plusBox .item .uniIcon {
  width: 90rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  margin-bottom: 10rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}
.bg .plusBox .item .wenzi {
  color: #696969;
  font-size: 25rpx;
}
.bg .addTag {
  display: flex;
  flex-wrap: wrap;
  padding-left: 40rpx;
  background-color: white;
}
.bg .addTag .txt {
  display: flex;
  flex-wrap: wrap;
  background-color: white;
}
.bg .addTag .txt text {
  margin: 1rem;
  margin-left: 0;
  margin-top: .5rem;
  padding-left: 1rem;
  padding-right: 1rem;
  height: 2rem;
  line-height: 2rem;
  background-color: #eeeeee;
  font-size: .8rem;
}

