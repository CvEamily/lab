view .top {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
view .top text {
  font-weight: 550;
}
view .top .uniIcon {
  float: right;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
view .body {
  overflow-y: scroll;
  width: 100%;
  height: 80vh;
  padding-top: 10rpx;
  background-color: #ededed;
}
view .body .new, view .body .new2 {
  float: left;
  width: 100%;
  box-sizing: border-box;
  padding: 25rpx;
}
view .body .new .user, view .body .new2 .user {
  float: left;
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  box-shadow: 0 0 2rpx 2rpx white;
  border-radius: 50rpx;
}
view .body .new .user image, view .body .new2 .user image {
  height: 100%;
  width: 100%;
}
view .body .new text, view .body .new2 text {
  float: left;
  line-height: 60rpx;
  padding: 15rpx;
  max-width: 530rpx;
  min-height: 60rpx;
  border-radius: 10rpx;
}
view .body .new2 {
  float: right !important;
}
view .body .new2 .user {
  float: right !important;
}
view .body .new2 text {
  float: right !important;
}
view .enter {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 10vh;
}
view .enter .uniIcon {
  float: left;
  padding: 5rpx;
  padding-top: 30rpx;
}
view .enter .deliver {
  float: right;
  width: 120rpx;
  height: 60rpx;
  margin-top: 25rpx;
  margin-right: 10rpx;
  color: white;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  background-color: #07c160;
  border-radius: 10rpx;
}
view .enter input {
  float: left;
  width: 520rpx;
  height: 70rpx;
  padding-left: 20rpx;
  margin-top: 20rpx;
}
view .enter .another {
  width: 460rpx;
}

