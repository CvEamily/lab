.bg {
  width: 800rpx;
  height: 1300rpx;
  padding-top: 50rpx;
  background-image: url("https://tse3-mm.cn.bing.net/th/id/OIP-C.vspuQHICOxog7LicqMaXJwHaLF?pid=ImgDet&rs=1");
  background-size: 100% 100%;
}
.bg .top ._img {
  width: 100rpx;
  height: 100rpx;
}
.bg .top .saying {
  color: white;
  font-family: fangsong;
  font-size: 40rpx;
  padding-left: 100rpx;
}
.bg .time {
  margin-top: 300rpx;
}
.bg .stop {
  margin-top: 500rpx;
}
.bg .stop .stopbut {
  width: 50rpx;
  height: 50rpx;
  background-color: white;
  border: none;
}
.bg .stop uni-popup {
  border-radius: 50rpx;
}
.bg .stop uni-popup textarea {
  padding: 30rpx;
  border-radius: 50rpx;
  background-color: white;
}
.bg .stop uni-popup button {
  width: 180rpx;
  height: 80rpx;
  color: white;
  font-size: 25rpx;
  font-weight: 700;
  margin-top: 60rpx;
  background-color: #827ffe;
  border-radius: 100rpx;
}
.bg .stop uni-popup button .icon {
  margin-right: 10rpx;
  font-weight: 400;
}

