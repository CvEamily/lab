.tmt-header {
  height: 0rpx !important;
  padding: 0 !important;
}
.content {
  padding: 50rpx 20rpx 5rpx 30rpx;
  background-color: #f4f4f4;
}
.content .study {
  display: flex;
  height: 370rpx;
  width: 660rpx;
  flex-wrap: wrap;
  border-radius: 20rpx;
  padding-top: 30rpx;
  padding-left: 30rpx;
  background-color: white;
}
.content .study .head {
  font-weight: 600;
}
.content .study .head uni-icons {
  padding-left: 500rpx;
}
.content .study .studyItem {
  display: block;
  width: 168rpx;
  height: 210rpx;
  padding: 10rpx;
  margin-right: 20rpx;
  border-radius: 6%;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  border: 5rpx solid black;
}
.statistic {
  padding: 35rpx 35rpx 20rpx 35rpx;
}
.statistic .ovewview {
  border-radius: 20rpx;
  padding-top: 30rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
.statistic .ovewview .head {
  font-weight: 600;
  padding-left: 50rpx;
}
.statistic .ovewview .head uni-icons {
  padding-left: 450rpx;
}
.statistic .ovewview .time {
  display: flex;
  flex-wrap: wrap;
  padding-left: 30rpx;
  padding-top: 0rpx;
  border-radius: 20rpx;
}
.statistic .ovewview .time .timeItem {
  display: block;
  width: 200rpx;
  padding-top: 20rpx;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  word-wrap: break-word;
  font-weight: 200;
}
.statistic .ovewview .time .timeItem .title {
  padding: 0;
}
.statistic .ovewview .time .timeItem .title text {
  padding-left: 5rpx;
  font-size: 27rpx;
}
.statistic .ovewview .time .timeItem .minute {
  padding-top: 35rpx;
  text-align: center;
}
.statistic .ovewview .time .timeItem .minute .left {
  font-size: 30rpx;
}
.statistic .ovewview .weekRank {
  margin-left: 120rpx;
}
.statistic .ovewview .allTime {
  margin-left: 120rpx;
}
.statistic .calendar {
  margin-top: 40rpx;
  border-radius: 5%;
}
.statistic .calendar .head {
  font-weight: 600;
  padding-top: 30rpx;
  padding-left: 60rpx;
  padding-bottom: 20rpx;
  border-radius: 5%;
}
.statistic .calendar .head .t {
  font-size: 35rpx;
  padding-right: 350rpx;
  border-radius: 20%;
}
.statistic .calendar .head text {
  font-weight: 500;
  font-size: 25rpx;
}
.statistic .calendar .head uni-icons {
  padding-left: 0rpx;
}
.statistic .calendar .cal {
  background-color: pink;
  margin-bottom: 10rpx;
}
.statistic .calendar .cal tmt-calendar {
  border-radius: 20%;
}

