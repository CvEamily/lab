.bg .search {
  display: flex;
  padding-top: 40rpx;
  height: 120rpx;
  background-color: white;
}
.bg .search input {
  width: 520rpx;
  height: 80rpx;
  padding-left: 80rpx;
  margin-left: 25rpx;
  margin-right: 30rpx;
  border-radius: 15rpx;
  background-color: #eeeeee;
}
.bg .search .sea {
  color: #b9bec2;
}
.bg .search uni-icons {
  position: absolute;
  top: 60rpx;
  left: 50rpx;
}
.bg .search .sear {
  width: 80rpx;
  height: 50rpx;
  color: #007afd;
  padding-top: 20rpx;
}
.bg .tab {
  width: 100%;
  height: 50rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.bg .sort {
  display: flex;
  width: 100%;
  height: 100rpx;
  background-color: white;
}
.bg .sort .sortItem {
  width: 50%;
  color: #879aa8;
  text-align: center;
  padding-top: 30rpx;
}
.bg .sort .comSort {
  position: fixed;
  top: 320rpx;
  left: 0;
  width: 100%;
  height: 200rpx;
}
.bg .sort .comSort ._p {
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 60rpx;
  background-color: white;
  font-size: 30rpx;
  color: #99a0aa;
  border-bottom: 1rpx solid #f0f0f0;
}
.bg .sort .timeSort {
  width: 100%;
  height: 200rpx;
}
.bg .article {
  margin-top: 20rpx;
  background-color: #eef3f7;
}
.bg .article .blog {
  display: flex;
  width: 700rpx;
  height: 350rpx;
  padding-left: 40rpx;
  padding-top: 40rpx;
  margin-top: 20rpx;
}
.bg .article .blog .left {
  width: 220rpx;
  height: 300rpx;
  padding-bottom: 30rpx;
}
.bg .article .blog .left image {
  width: 100%;
  height: 100%;
}
.bg .article .blog .right {
  display: flex;
  flex-direction: column;
  width: 450rpx;
  height: 300rpx;
  padding-left: 40rpx;
}
.bg .article .blog .right .headline {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 35rpx;
  font-weight: 500;
}
.bg .article .blog .right .author {
  display: flex;
}
.bg .article .blog .right .author .user {
  width: 50rpx;
  height: 50rpx;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  box-shadow: 0 0 2rpx 2rpx white;
  border-radius: 50rpx;
}
.bg .article .blog .right .author .user image {
  height: 100%;
  width: 100%;
}
.bg .article .blog .right .author text {
  padding-left: 20rpx;
}
.bg .article .blog .right .body {
  height: 50rpx;
  margin-top: 15rpx;
  height: 150rpx;
  font-size: 30rpx;
  color: #a4a4a4;
}
.bg .article .blog .right .icon {
  display: flex;
}
.bg .article .blog .right .icon .uniIcon {
  margin-right: 30rpx;
}

